# установка playwright для работы с браузером
pip install playwright

# установка pytest для параметризации тестов
pip install pytest

# установка pytest-playwright
pip install pytest-playwright

# установка pytest-rerunfailures для повторного запуска тестов
pip install pytest-rerunfailures

# установка allure-pytest для генерации Allure отчетов
pip install allure-pytest

параметры для запуска теста с сохранением результатов в Allure
--alluredir=./allure-results

генерация отчета по результатам тестирования
allure generate ./allure-results --output=./allure-report

открытие динамического сгенерированного отчета в браузере
allure serve ./allure-results

открытие статического сгенерированного отчета в браузере
allure open ./allure-report

# установка pytest-xdist для параллельного выполнения тестов
pip install pytest-xdist

# параллельное выполнение тестов с использованием 2 процессов
--numprocesses=2